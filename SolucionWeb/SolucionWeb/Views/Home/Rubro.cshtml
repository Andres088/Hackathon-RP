@using SolucionWeb.Controllers;

@{
    ViewBag.Title = "Rubro";
}




<div class="container">
    <div class="row">
        <div class="col"></div>
        <div class="col"></div>
        <div class="col"></div>

        <div class="col">
            <h2>Rubro</h2>
            <h3>Estás en @ViewBag.mall.inm_c_vnomb</h3>
            <p>¿En qué tipo de tiendas estás interesado?</p>

            <div class="list-group">
                @{
                    foreach (Rubro rubro in ViewBag.lista_rubros)
                    {
                        @Html.ActionLink(@rubro.rubro_c_vnomb, "Tienda", "Home", rubro, new { @class = "list-group-item list-group-item-action" })
                    }
                }
            </div>
        </div>

        <div class="col"></div>
        <div class="col"></div>
        <div class="col"></div>
    </div>

    

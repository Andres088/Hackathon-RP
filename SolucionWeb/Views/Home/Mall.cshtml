@using SolucionWeb.Controllers;

@{
    ViewBag.Title = "Mall";
}

<div class="container well">
    <div class="row">

            <h3 class="text-center">Estás en @ViewBag.departamento</h3>
            <h2 class="text-center" style="padding-bottom:20px">¿A qué centro comercial deseas ir?</h2>

    </div>
    <div class="row">


        <div class="list-group text-center" id="lista_mall">
            
            @{
                foreach (Mall mall in ViewBag.lista_malls)
                {
                    @Html.ActionLink(@mall.inm_c_vnomb, "Rubro", "Home", mall, new { @class = "list-group-item list-group-item-action" })
                }
            }
        </div>
    </div>
</div>



